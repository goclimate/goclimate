{
  "name": "goclimateneutral",
  "scripts": {
    "postdeploy": "bin/rails db:schema:load db:seed"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "PUBLISHABLE_KEY": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "ROLLBAR_ENV": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "SENDGRID_API_KEY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "rollbar"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
