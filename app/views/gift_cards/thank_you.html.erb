<div class="site-wrapper-inner site-wrapper-first">

  <div class="cover-container">
    <%= render "shared/header" %>

    <div class="inner cover">
      <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>

      <h1 class="cover-heading"><%=t 'views.gift_card_mailer.thank_you_for_buying_gift_card' %></h1>

      <p class="lead"><%=t 'views.gift_card_mailer.you_have_purchased_a_gift_card_with' %> <%= @number_of_months %> <%=t 'views.gift_card_mailer.climate_neutral_months' %>.</p>

      <p class="lead"><a href="/gift_cards/download.pdf"><%=t 'views.gift_card_mailer.download_the_gift_card_here'%></a></p>

      <p class="lead"><%=t 'we_have_sent_you_an_email_with_the_gift_card' %>: <%= @email %></p>

      <p class="lead last"><%=t 'thank_you_for_helping_us_trying_to_stop_climate_change' %>: <%= link_to('GoClimateNeutral.org', '/') %></p>

    </div>
  </div>
</div>

<%= render "shared/footer" %>

<script type="text/javascript">
ga('send', 'event', 'Gift Cards', 'Purchased', 'Gift Card <%= @number_of_months %> months');
</script>
