
        <div class="form-group">
          <label for="plan" class="col-sm-offset-1 col-sm-4 control-label padding-top"><%=t 'climate_plan' %></label>
          <div class="col-sm-4">
            <select id="plan" name="user[plan]" class="form-control input-sm">
              <% if current_page?(controller: 'subscriptions', action: 'show') %>
                <% if @plan == "canceled" %>
                  <option value="" selected=1>-</option>
                <% else %>
                  <option value="cancel">cancel climate plan</option>
                <% end %>
              <% end %>
              <% if @currency == "sek" %>

                <% (10..@plan+300).step(5).each do |i| %>
                  <% if i == @plan.to_i %>
                    <option value="<%= i %>" selected=1><%= i %> kr/mån</option>
                  <% else %>
                    <option value="<%= i %>"><%= i %> kr/mån</option>
                  <% end %>
                <% end %>

              <% elsif @currency == "usd" %>

                <% (2...@plan+30).each do |i| %>
                  <% if i == @plan.to_i %>
                    <option value="<%= i %>" selected=1>$<%= i %>/month</option>
                  <% else %>
                    <option value="<%= i %>">$<%= i %>/month</option>
                  <% end %>
                <% end %>

              <% elsif @currency == "eur" %>
                
                <% (2...@plan+30).each do |i| %>
                  <% if i == @plan.to_i %>
                    <option value="<%= i %>" selected=1><%= i %> €/month</option>
                  <% else %>
                    <option value="<%= i %>"> <%= i %> €/month</option>
                  <% end %>
                <% end %>

              <% end %>
            </select>
          </div>
        </div>
