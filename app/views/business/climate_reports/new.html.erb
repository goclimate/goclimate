<div class="site-wrapper-first site-wrapper-first--nav-only">
  <%= render "shared/header" %>
</div>

<div class="site-wrapper-second">
  <div class="inner inner--with-grid">
    <div class="container">

      <div class="row">
        <div class="col-xs-12">

          <h1 class="cover-heading">
            Estimate your business footprint
          </h1>
          <p class="lead">
            Estimating your footprint is the first step to reducing and taking
            responsiblity for your climate impact. Because getting an estimate
            requires a few numbers from different parts of your business
            activities, we recommend going through the areas below one by one
            before submitting all numbers.
          </p>

        </div>
      </div>

      <%= form_for [:business, @report], html: { class: "form-horizontal" } do |f| %>
        <% if @report.errors.any? %>
          <%# This is a panel because alerts are currently scripted to be dismissed automatically %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <% @report.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">General information</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="company_name" class="col-sm-5 control-label">Company name</label>
            <div class="col-sm-7">
              <%= f.text_field :company_name, class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="employees" class="col-sm-5 control-label">Number of employees</label>
            <div class="col-sm-7">
              <%= f.number_field :employees, class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="country" class="col-sm-5 control-label">Country</label>
            <div class="col-sm-7">
              <span class="form-control-static" style="display: block;">Sweden</span>
              <%= f.hidden_field :country, id: 'country' %>
            </div>
          </div>

          <div class="form-group">
            <label for="calculation_period" class="col-sm-5 control-label">Calculation period</label>
            <div class="col-sm-7">
              <%= f.text_field :calculation_period, class: 'form-control', required: '' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Energy</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="electricity_consumption" class="col-sm-5 control-label">Electricity consumption</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= f.number_field :electricity_consumption, class: 'form-control' %>
                <div class="input-group-addon">kWh</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="heating" class="col-sm-5 control-label">Heating</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= f.number_field :heating, class: 'form-control' %>
                <div class="input-group-addon">kWh</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="heating" class="col-sm-5 control-label">Average number of active servers</label>
            <div class="col-sm-7">
              <%= f.number_field :number_of_servers, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Business trips</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="flight_hours" class="col-sm-5 control-label">Total flight hours</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= f.number_field :flight_hours, class: 'form-control' %>
                <div class="input-group-addon">hours</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="car_distance" class="col-sm-5 control-label">Distance by car &amp; taxi</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= f.number_field :car_distance, class: 'form-control' %>
                <div class="input-group-addon">kilometers</div>
              </div>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Food</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="meals" class="col-sm-5 control-label">Number of meals</label>
            <div class="col-sm-7">
              <%= f.number_field :meals, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label for="meals" class="col-sm-5 control-label">Share of vegetarian meals</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= f.number_field :meals_vegetarian_share, class: 'form-control', min: 0, max: 100 %>
                <div class="input-group-addon">%</div>
              </div>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Material</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="purchased_computers" class="col-sm-5 control-label">Purchased computers</label>
            <div class="col-sm-7">
              <%= f.number_field :purchased_computers, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label for="purchased_phones" class="col-sm-5 control-label">Purchased phones/tablets</label>
            <div class="col-sm-7">
              <%= f.number_field :purchased_phones, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label for="purchased_monitors" class="col-sm-5 control-label">Purchased monitors</label>
            <div class="col-sm-7">
              <%= f.number_field :purchased_monitors, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Other</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="other" class="col-sm-5 control-label">Other footprint</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= f.number_field :other_co2e, class: 'form-control' %>
                <div class="input-group-addon">kg CO2e</div>
              </div>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Contact</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="contact_email" class="col-sm-5 control-label">Contact email</label>
            <div class="col-sm-7">
              <%= f.email_field :contact_email, class: 'form-control', required: '' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
              <%= f.submit 'See my business footprint', class: 'btn btn-success' %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
  <span class="glyphicon glyphicon-chevron-down first" aria-hidden="true"></span>
</div>
