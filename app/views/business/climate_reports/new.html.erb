<div class="site-wrapper-first site-wrapper-first--nav-only">
  <%= render "shared/header" %>
</div>

<div class="site-wrapper-second">
  <div class="inner inner--with-grid">
    <div class="container">

      <div class="row">
        <div class="col-xs-12">

          <h1 class="cover-heading">
            Estimate your business footprint
          </h1>
          <p class="lead">
            Estimating your footprint is the first step to reducing and taking
            responsiblity for your climate impact. Because getting an estimate
            requires a few numbers from different parts of your business
            activities, we recommend going through the areas below one by one
            before submitting all numbers.
          </p>

        </div>
      </div>

      <%= form_tag(business_climate_reports_path, method: :post, class: "form-horizontal") do %>
        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">General information</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="company_name" class="col-sm-5 control-label">Company name</label>
            <div class="col-sm-7">
              <%= text_field_tag :company_name, '', class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="employees" class="col-sm-5 control-label">Number of employees</label>
            <div class="col-sm-7">
              <%= number_field_tag :employees, '', class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="country" class="col-sm-5 control-label">Country</label>
            <div class="col-sm-7">
              <%= country_select '', :country,
                { include_blank: true, priority_countries: %w[SE NO DK FI DE GB US] },
                { id: 'country', autofocus: true, id: "country", class: 'form-control', required: '' } %>
            </div>
          </div>

          <div class="form-group">
            <label for="calculation_period" class="col-sm-5 control-label">Calculation period</label>
            <div class="col-sm-7">
              <%= text_field_tag :calculation_period, '', class: 'form-control', required: '', value: '2018' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Energy</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="electricity_consumption" class="col-sm-5 control-label">Electricity consumption</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= number_field_tag :electricity_consumption, '', class: 'form-control', required: '' %>
                <div class="input-group-addon">kWh</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="heating" class="col-sm-5 control-label">Heating</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= number_field_tag :heating, '', class: 'form-control', required: '' %>
                <div class="input-group-addon">kWh</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="heating" class="col-sm-5 control-label">Average number of active servers</label>
            <div class="col-sm-7">
              <%= number_field_tag :number_of_servers, '', class: 'form-control', required: '' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Business trips</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="flight_hours" class="col-sm-5 control-label">Total flight hours</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= number_field_tag :flight_hours, '', class: 'form-control', required: '' %>
                <div class="input-group-addon">hours</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="car_distance" class="col-sm-5 control-label">Distance by car &amp; taxi</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= number_field_tag :car_distance, '', class: 'form-control', required: '' %>
                <div class="input-group-addon">kilometers</div>
              </div>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Food</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="meals" class="col-sm-5 control-label">Number of meals</label>
            <div class="col-sm-7">
              <%= number_field_tag :meals, '', class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="meals" class="col-sm-5 control-label">Share of vegetarian meals</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= number_field_tag :meals, '', class: 'form-control', required: '', min: 0, max: 100 %>
                <div class="input-group-addon">%</div>
              </div>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Material</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="purchased_computers" class="col-sm-5 control-label">Purchased computers</label>
            <div class="col-sm-7">
              <%= number_field_tag :purchased_computers, '', class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="purchased_phones" class="col-sm-5 control-label">Purchased phones/tablets</label>
            <div class="col-sm-7">
              <%= number_field_tag :purchased_phones, '', class: 'form-control', required: '' %>
            </div>
          </div>

          <div class="form-group">
            <label for="purchased_monitors" class="col-sm-5 control-label">Purchased monitors</label>
            <div class="col-sm-7">
              <%= number_field_tag :purchased_monitors, '', class: 'form-control', required: '' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Other</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="other" class="col-sm-5 control-label">Other footprint (optional)</label>
            <div class="col-sm-7">
              <div class="input-group">
                <%= number_field_tag :other, '', class: 'form-control', step: '0.1' %>
                <div class="input-group-addon">tonnes CO2e</div>
              </div>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="row">
            <div class="col-sm-offset-5 col-sm-7">
              <h3 class="text-left">Contact</h3>
            </div>
          </div>

          <div class="form-group">
            <label for="contact_email" class="col-sm-5 control-label">Contact email</label>
            <div class="col-sm-7">
              <%= email_field_tag :contact_email, '', class: 'form-control', required: '' %>
            </div>
          </div>
        </div>

        <div class="content-section">
          <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
              <%= button_tag 'See my business footprint', class: 'btn btn-success', required: '' %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
  <span class="glyphicon glyphicon-chevron-down first" aria-hidden="true"></span>
</div>
