<%= render "shared/header" %>

<section class="section-padding flex flex-row">
  <div class="max-w-3xl space-y-3">
    <h1 class="heading-lg">Thank you!</h1>
    <% if @accepted %>
      <p>Your new monthly fee will be <%= current_user.subscription_price * 1.5 %> from July 1st 2021.</p>
    <% else %>
      <p>You will keep your current subscription of <%= current_user.subscription_price %>.</p>
    <% end %>
    <p>A big thank you for building a sustainable future with us at GoClimate!</p>
  </div>
</section>

<%= render "shared/bottom_landscape" %>
<%= render "shared/footer", skip_prefooter: true %>
