      <div class="site-wrapper-inner site-wrapper-first">
        
        <div class="cover-container">
          
          <%= render "shared/header" %>

          <div class="inner cover">
              <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
              <h3 class="cover-heading">
                <% if @my_neutral_months == 1 %>
                  <%=t 'you_have_lived_climate_neutral_for_one_month', months: @my_neutral_months %>
                <% else %>
                  <%=t 'you_have_lived_climate_neutral_for_more_months', months: @my_neutral_months %>
                <% end %>
              e</h3>


                  <div class="row stats">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                      <p><%=t 'number_of_months_you_have_been_climate_neutral' %>:</p> 
                      <h1><%= @my_neutral_months %></h1>
                    </div>
                    <div class="col-md-4">
                      <p><%=t 'you_climate_offset_investments' %>:</p>
                      <h1>$<%= @my_amount_invested %></h1>
                    </div>
                    <div class="col-md-2"></div>
                  </div>

                  <div class="row stats">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                      <p><%=t 'number_of_climate_neutral_months_for_all_users' %>:</p> 
                      <h1><%= @total_climate_neutral_months %></h1>
                    </div>
                    <div class="col-md-4">
                      <p>Number of climate neutral users right now:</p> 
                      <h1><%= @unique_climate_neutral_users %></h1>
                    </div>
                    <div class="col-md-2"></div>
                  </div>


                  <div class="row stats">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                      <p>Total climate offset project investments:</p> 
                      <h1>$<%= @total %></h1>
                    </div>
                    <div class="col-md-4">
                      <p></p> 
                      <h1></h1>
                    </div>
                    <div class="col-md-2"></div>
                  </div>
                


          </div>
          
        </div>
      </div>

      <div class="site-wrapper-inner site-wrapper-second">
        <div class="cover-container">
          <div class="inner cover">
            <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
            
            <div class="row stats">
                <div class="col-md-2"></div>
                <div class="col-md-4">
                    <h3>Climate Hero Toplist</h3>
                    <ol>
                    <% @user_top_list.each do |user| %>
                      <% count = user.count %>
                      <% user_name = user.reload.user_name || "Unknown User" %>
                      <li><%= user_name %> (<%= count %> climate neutral months)</li>  
                    <% end %>
                    </ol>
                </div>
                <div class="col-md-4">
                    <h3>Climate Country Toplist</h3>
                    <ol>
                    <% @country_top_list.each do |country| %>
                      <% count = country.count %>
                      <% country_name = country.country_name || "Unknown" %>
                      <li><%= country_name %> (<%= count %> climate neutral months)</li>  
                    <% end %>
                    </ol>
                </div>
                <div class="col-md-2"></div>
            </div>
          </div>
        </div>
      </div>



      <div class="site-wrapper-inner site-wrapper-third">
        <div class="cover-container">
          <div class="inner cover">
            <span class="glyphicon glyphicon-tree-deciduous" aria-hidden="true"></span>
            
            <div class="row stats">
                <div class="col-md-12">
                  <p>Total carbon offset by GoClimateNeutral.org:</p> 
                  <h1><%= @total_carbon_offset %> tonnes CO2</h1>
                  <p>Thank you so much everyone for helping to save the world! You Rock!</p> 
                </div>
            </div>
          </div>
        </div>
      </div>


      <div class="site-wrapper-inner site-wrapper-second">
        <div class="cover-container">
          <div class="inner cover">
            <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
            
            <div class="row stats">
                <div class="col-md-12">
                    <h1>Latest Carbon Offset Projects</h1>
                    <% @projects.each do |project| %>
                      <h3><a href ="<%= project.blog_url %>"><%= project.name %></a></h3>
                      <div><%= image_tag project.image_url, size: "150" %></div>
                      <p>Offset: <%= project.carbon_offset %> tonnes CO2
                      <br>Country: <%= project.country %>
                      <br>Location: <a href="https://www.google.com/maps/preview/@<%= project.latitude %>,<%= project.longitude %>,8z" target="_blank"><%= project.latitude %>,<%= project.longitude %></a>
                      <br><a href="<%= project.link %>">More info on UN site</a></p>
                    <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>

      <%= render "shared/footer" %>













