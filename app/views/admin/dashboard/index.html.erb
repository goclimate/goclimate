<h3>CO2-credits sold</h3>
<table class="table table-striped table-condensed">
  <tr>
    <th style="min-width: 120px;"></th>
    <% @co2e_per_month_individuals.each do |key, _| %>
      <th style="white-space: nowrap;">
        <%= key %>
      </th>
    <% end %>
  </tr>
  <tr>
    <td>individuals</td>
    <% @co2e_per_month_individuals.each do |_, value| %>
      <td><%= number_with_delimiter(value.to_i) %></td>
    <% end %>
  </tr>
  <tr>
    <td>invoices</td>
    <% @co2e_per_month_individuals.each do |key, _| %>
      <td><%= number_with_delimiter(@co2e_per_month_invoices[key].to_i / 1000) %></td>
    <% end %>
  </tr>
  <tr>
    <td>climate report invoices</td>
    <% @co2e_per_month_individuals.each do |key, _| %>
      <td><%= number_with_delimiter(@co2e_per_month_cri[key].to_i / 1000) %></td>
    <% end %>
  </tr>
  <tr>
    <td>total</td>
    <% @co2e_per_month_individuals.each do |key, value| %>
      <td><%= number_with_delimiter((value + @co2e_per_month_invoices[key].to_i / 1000 + @co2e_per_month_cri[key].to_i / 1000).to_i) %></td>
    <% end %>
  </tr>
</table>


