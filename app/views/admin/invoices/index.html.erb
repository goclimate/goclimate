<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Project Id</th>
      <th>Project Name</th>
      <th>Amount in sek</th>
      <th>Carbon offset</th>
      <th>Receiver</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.id %></td>
        <td><%= invoice.project.id if !invoice.project.nil? %></td>
        <td><%= invoice.project.name if !invoice.project.nil? %></td>
        <td><%= invoice.amount_in_sek %></td>
        <td><%= invoice.carbon_offset %></td>
        <td><%= invoice.receiver %></td>
        <td class="admin-actions">
          <%= link_to 'Certificate', admin_invoice_certificates_url(id: invoice.id, format: :pdf) %> &nbsp;
          <%= link_to 'Show', [:admin, invoice] %> &nbsp;
          <%= link_to 'Edit', edit_admin_invoice_path(invoice) %> &nbsp;
          <%= link_to 'Destroy', [:admin, invoice], method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'New Invoice', new_admin_invoice_path, class: 'btn btn-default' %>
