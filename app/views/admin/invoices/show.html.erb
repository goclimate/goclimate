<p id="notice"><%= notice %></p>

<h1>Invoice</h1>

<dl class="dl-horizontal">
  <dt>id:</dt>
  <dd><%= @invoice.id %></dd>

  <dt>project id:</dt>
  <dd><%= @invoice.project.id if !@invoice.project.nil? %></dd>

  <dt>Amount in sek:</dt>
  <dd><%= @invoice.amount_in_sek %></dd>

  <dt>Carbon offset:</dt>
  <dd><%= @invoice.carbon_offset %></dd>

  <dt>Receiver:</dt>
  <dd><%= @invoice.receiver %></dd>
</dl>

<hr>

<%= link_to 'Edit', edit_admin_invoice_path(@invoice), class: 'btn btn-default' %>
<%= link_to 'Back', admin_invoices_path, class: 'btn btn-link' %>
