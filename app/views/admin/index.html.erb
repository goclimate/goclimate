<div>
	<h1>Admin</h1>

	<h3>Status CO2eq bought / sold</h3>
	<ul>
		<li>Total CO2eq bought: <%= @total_co2_bought %> ton</li>
		<li>Total CO2eq consumed: <%= @total_co2_consumed %> ton</li>
		<li>Result right now: <%= @total_co2_bought - @total_co2_consumed %> ton</li>
	</ul>

	<h3>Status economy</h3>
	<ul>
		<li>Total recieved: <%= @payouts_in_sek %> SEK</li>
		<li>Total spent on offsets: <%= @total_sek_spent %> SEK</li>
	</ul>

	<h3>Growth</h3>
		<table class="table table-striped">
			<tr>
				<th></th>
				<% (0..30).each do |i| %>
					<% if (Date.today - i).wday == 0 %>
						<th style="background-color: red;">
					<% elsif (Date.today - i).wday == 6 %>
						<th style="background-color: orange;">
					<% else %>
						<th>
					<% end %>
						<%= (Date.today - i).day.to_s + "/" + (Date.today - i).month.to_s %>
					</th>
				<% end %>
			</tr>
			<tr>
				<td>new&nbsp;users</td>
				<% (0..30).each do |i| %>
					<td><%= @new_users[(Date.today - i).to_s] %></td>
				<% end %>
			</tr>
			<tr>
				<td>snitt&nbsp;14&nbsp;dgr</td>
				<% (0..30).each do |i| %>
					<td><%= @new_users_mean[(Date.today - i).to_s] %></td>
				<% end %>
			</tr>

		</table>

</div>