<%= render 'admin/shared/notice_banner' %>

<h1 class="heading-lg">Unit</h1>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @unit.name %></dd>
  <dt>Key:</dt>
  <dd><%= @unit.key %></dd>
  <dt>Input type:</dt>
  <dd><%= @unit.input_type %></dd>
  
  <dt>Updated:</dt>
  <dd><%= time_tag(@unit.updated_at) %></dd>
</dl>

<hr>

<%= link_to 'Edit', edit_admin_unit_path(@unit), class: 'button' %>
<%= link_to 'Back', admin_units_path, class: 'link' %>
