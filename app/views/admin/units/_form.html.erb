<%= form_with(model: [:admin, unit], local: true) do |form| %>
  <% if unit.errors.any? %>
    <div>
      <h2><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
        <% unit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'input' %>
  </div>

  <div class="flex flex-col">
    <%= form.label :key %>
    <%= form.text_field :key, class: 'input' %>
  </div>

  <div class="flex flex-col">
    <%= form.label :input_type %>
    <%= form.select(:input_type, [['Number field', 'number'], ['Text area', 'textarea'], ['Text field', 'text']], { selected: form.object.input_type }, { class: 'input' }) %>
  </div>

  <%= form.submit class: 'button button-cta' %>
<% end %>
