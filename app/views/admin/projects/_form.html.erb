<%= form_for([:admin, project]) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :short_description %>
    <%= f.text_area :short_description, class: 'form-control' %>
    <span class="help-block">Shown along with a read more link that leads to the blog URL</span>
  </div>

  <div class="form-group">
    <%= f.label :cdm_url %>
    <%= f.text_field :cdm_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :gold_standard_url %>
    <%= f.text_field :gold_standard_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :blog_url %>
    <%= f.text_field :blog_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :longitude %>
    <%= f.text_field :longitude, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :latitude %>
    <%= f.text_field :latitude, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :co2e %> (in kg CO2e)
    <%= f.number_field :co2e, value: f.object.co2e.co2e, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cost_in_sek, 'Cost in SEK (including VAT)' %>
    <%= f.number_field :cost_in_sek, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date_bought %>
    <%= f.date_field :date_bought, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :offset_type %>
    <%= f.text_field :offset_type, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :certificate_url %>
    <%= f.text_field :certificate_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :invoice_url %>
    <%= f.text_field :invoice_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :gold_standard_id, 'Gold Standard Id' %>
    <%= f.text_field :gold_standard_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cdm_id, 'CDM Id' %>
    <%= f.text_field :cdm_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_block %>
    <%= f.text_field :start_block, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_block %>
    <%= f.text_field :end_block, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
