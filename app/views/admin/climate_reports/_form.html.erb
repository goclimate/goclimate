<%= form_with(model: [:admin, climate_report], local: true) do |form| %>
  <% if climate_report.errors.any? %>
    <div>
      <h2><%= pluralize(climate_report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% climate_report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'input' %>
  </div>

  <div class="flex flex-col">
    <%= form.label :organization %>
    <%= form.select :organization_id, options_for_select(@organizations, @report.organization&.id), {}, class: 'input' %>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="flex flex-col">
        <%= form.label :start_date %>
        <%= form.date_field :start_date, class: 'input', value: @report.reporting_period&.first %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="flex flex-col">
        <%= form.label :end_date %>
        <%= form.date_field :end_date, class: 'input', value: @report.reporting_period&.last %>
      </div>
    </div>
  </div>

  <h2>Report areas</h2>
  <div data-controller="add-nested-fields">
    <%= form.fields_for :areas do |area_fields| %>
      <%= area_fields.hidden_field :id %>
      <div class="row" style="margin-bottom: 1em">
        <div class="col-sm-6">
          <%= area_fields.label :area_name %>
          <%= area_fields.text_field :title, class: 'input' %>
        </div>
        <div class="col-sm-5">
          <%= area_fields.label :calculator, class: 'add-nested-fields-label-field'%>
          <%= area_fields.select :calculator_id, options_from_collection_for_select(@calculators, :id, :name, area_fields.object.calculator.id.to_i), {}, class: 'input add-nested-fields-input-field' %>
        </div>
        <div class="col-sm-1">
          <%= area_fields.label :delete %>
          <%= area_fields.check_box :_destroy %>
        </div>
      </div>
    <% end %>

    <%= form.fields_for :areas, ClimateReports::ReportArea.new do |area_fields| %>
      <div class="hidden row" data-target="add-nested-fields.template">
        <div class="flex flex-col col-sm-6">
          <%= area_fields.label :area_name %>
          <%= area_fields.text_field :title, class: 'input add-nested-fields-input-field', style: '', placeholder: 'Area name ...'  %>
        </div>

        <div class="col-sm-5">
          <%= area_fields.label :calculator, class: 'add-nested-fields-label-field'%>
          <%= area_fields.select :calculator_id, options_from_collection_for_select(@calculators, :id, :name), {}, class: 'input add-nested-fields-input-field' %>
        </div>
        <div class="col-sm-1">
          <%= area_fields.label :delete %>
          <%= area_fields.check_box :_destroy %>
        </div>
      </div>
    <% end %>

    <div data-target="add-nested-fields.destination" style=""></div>

    <div style="margin: 1.5em 0">
      <button type="button" class="button" data-action="add-nested-fields#cloneToDestinationWithFirstNumberIncremented">
        <i class="fas fa-plus" aria-hidden="true"></i> Add area
      </button>
    </div>
  </div>

  <%= form.submit class: 'button button-cta' %>
<% end %>
