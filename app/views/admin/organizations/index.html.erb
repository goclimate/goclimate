<%= render 'admin/shared/notice_banner' %>

<h1 class="heading-lg">Organizations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= time_tag(organization.updated_at, format: '%F %R') %></td>
        <td class="whitespace-nowrap">
          <%= link_to 'Show', [:admin, organization], class: 'link-ui text-green-shade-2' %> &nbsp;
          <%= link_to 'Edit', edit_admin_organization_path(organization), class: 'link-ui text-green-shade-2' %> &nbsp;
          <%= link_to 'Destroy', [:admin, organization], method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-ui text-green-shade-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'New Organization', new_admin_organization_path, class: 'button' %>
