<%= render 'admin/shared/notice_banner' %>

<% if @previous.present? %>
  <%= link_to '← Previous', admin_climate_report_invoice_path(@previous), class: 'button' %>
<% end %>
<% if @next.present? %>
  <%= link_to 'Next →', admin_climate_report_invoice_path(@next), class: 'button' %>
<% end %>

<h1 class="heading-lg">Climate Report Invoice</h1>

<dl class="dl-horizontal">
  <dt>ID:</dt>
  <dd><%= @invoice.id %></dd>

  <dt>Fortnox invoice:</dt>
  <dd><%= @invoice.fortnox_id %></dd>

  <dt>Created:</dt>
  <dd><%= time_tag(@invoice.created_at) %></dd>

  <dt>Company:</dt>
  <dd><%= @invoice.climate_report.company_name %></dd>

  <dt>Contact email:</dt>
  <dd><%= @invoice.climate_report.contact_email %></dd>

  <dt>Calculation period:</dt>
  <dd><%= @invoice.climate_report.calculation_period %> (<%= @invoice.climate_report.calculation_period_length %>)</dd>

  <dt>Carbon offset:</dt>
  <dd><%= number_with_delimiter(@invoice.co2e, delimiter: ' ') %> kg co2e</dd>

  <dt>Amount:</dt>
  <dd><%= price_string(@invoice.amount, @invoice.currency, lowest_denominator: true) %></dd>

  <dt>Invoice address:</dt>
  <dd><pre><%= @invoice.invoice_address %></pre></dd>

  <dt>VAT number:</dt>
  <dd><%= @invoice.vat_number %></dd>

  <dt>Certificate sent at:</dt>
  <dd><%= @invoice.certificate_sent_at %></dd>

  <dt>Certificate reciever:</dt>
  <dd><%= @invoice.certificate_reciever_email %></dd>

  <dt>Invoice email:</dt>
  <dd>
    <% if @invoice.invoice_email.present? %>
      <%= @invoice.invoice_email %>
    <% else %>
      <i>Send invoice via mail</i>
    <% end %>
  </dd>

  <dt>Booked for project:</dt>
  <dd>
    <% if @invoice.project.present? %>
      <%= link_to(@invoice.project.name, [:admin, @invoice.project]) %>
    <% else %>
      <i>Not yet booked</i>
    <% end %>
</dl>

<hr>

<% unless @invoice.project.present? %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h3>Connect this invoice to a project and a Fortnox invoice</h3>
      <%= form_for [:admin, @invoice] do |f| %>
        <div class="flex flex-col">
          <%= f.label :project_id, 'Project' %>
          <%= f.select :project_id, project_id_options_for_select(@available_projects, @invoice.co2e), {}, class: 'input', required: '', include_blank: true %>
        </div>
        <div class="flex flex-col">
          <%= f.label :fortnox_id, 'Fortnox invoice' %>
          <%= f.text_field :fortnox_id, class: 'input' %>
        </div>
        <%= submit_tag 'Connect', class: 'button button-cta' %>
      <% end %>
    </div>
  </div>

  <hr>
<% end %>

<%= link_to 'Edit', edit_admin_climate_report_invoice_path(@invoice), class: 'button' %>
<%= link_to 'Go to climate report', business_climate_report_path(@invoice.climate_report), class: 'button' %>
<% if @invoice.project.present? %>
  <%= link_to 'Download certificate (en)', admin_invoice_certificates_path(type: 'climate_report_invoice', id: @invoice.id, format: :pdf), class: 'button' %>
  <%= link_to 'Download certificate (sv)', admin_invoice_certificates_path(type: 'climate_report_invoice', id: @invoice.id, format: :pdf, locale: 'sv'), class: 'button' %>
  <%= link_to 'Send certificate with e-mail (sv)', send_email_admin_invoice_certificates_path(type: 'climate_report_invoice', id: @invoice.id), class: 'button', method: :post %>
<% end %>
<%= link_to 'Back', admin_climate_report_invoices_path, class: 'link' %>
