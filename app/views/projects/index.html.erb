<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Image url</th>
      <th>Blog url</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Carbon offset</th>
      <th>Country</th>
      <th>Offset type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.link %></td>
        <td><%= project.image_url %></td>
        <td><%= project.blog_url %></td>
        <td><%= project.longitude %></td>
        <td><%= project.latitude %></td>
        <td><%= project.carbon_offset %></td>
        <td><%= project.country %></td>
        <td><%= project.offset_type %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

