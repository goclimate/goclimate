<!DOCTYPE html>
<html>
  <head>
    <title><%=t 'site_title' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= favicon_link_tag %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag params[:controller] %>
    <%= stylesheet_link_tag 'application' %>

    <meta property="og:type"             content="website" />
    <meta property="og:url"              content="<%=t 'goclimateneutral_url' %>" />
    <meta property="og:title"              content="<%=t 'welcome_to_a_climate_neutral_life' %>" />
    <meta property="og:description"        content="<%=t 'climate_change_is_the_greatest_challange' %>" />
    <meta property="og:image"              content="<%= image_url('share-image.png') %>" />
    <meta property="fb:app_id"             content="452582378427296" />
    
    <link href="https://fonts.googleapis.com/css?family=Raleway:300" rel="stylesheet">

    <script src="https://js.stripe.com/v3/"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-97611261-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body class="<%= controller_name + " " + controller_name + "-" + action_name %>">
       
    <div class="site-wrapper">
       
    <% if notice || alert %>
      <div class="alert alert-warning" role="alert">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
      </div>
    <% end %>

    <%= yield %>

    </div>
  </body>
</html>
