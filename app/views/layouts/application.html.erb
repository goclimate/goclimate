      <script>
        Sentry.init({
          dsn: "<%= ENV["SENTRY_DSN"] %>",
          environment: "<%= Raven.configuration.current_environment %>",
          release: "<%= Raven.configuration.release %>"
        });
      </script>
    <% end %>
