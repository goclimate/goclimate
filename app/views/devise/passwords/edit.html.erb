<div class="site-wrapper-first">
  <div class="cover-container">
    <%= render "shared/header" %>
    <div class="inner">

      <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
      <h1 class="cover-heading"><%=t 'change_your_password' %></h1>
      <p class="lead"><%=t 'change_your_password_by_entering_your_new_password_below' %></p>


    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <div class="col-sm-1"></div>
        <label for="password" class="col-sm-4 control-label padding-top"><%=t 'password' %></label>
        <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", id: "password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label for="confirmationPassword" class="col-sm-4 control-label padding-top"><%=t 'confirm_password' %></label>
        <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", id: "confirmationPassword", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-5 col-sm-4">
          <button type="submit" class="btn btn-success sign-in"><%=t 'change_password' %></button>
        </div>
      </div>

    <% end %>

    </div>
  </div>
</div>

<%= render "shared/footer" %>
