            <p class="lead"><%=t 'business.gcn_certified_company_html' %></p>
            <div class="container">  
              <p class="big-number">
                <% case I18n.locale when :en %>
                  $<span id="big-number"></span> /month
                <% when :de %>
                  <span id="big-number"></span> €/month
                <% when :sv %>
                  <span id="big-number"></span> kr/månad
                <% end %>
              </p>
