                  </div>
                  <div class="form-group">
                    <%= label_tag(:email, t('business.your_email'), class: 'col-lg-5 control-label') %>
                    <div class="col-lg-2">
                      <%= text_field_tag(:email, '', class: 'form-control') %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-offset-5 col-lg-2 button">
                      <button type="submit" class="btn btn-success"><%=t 'business.im_interested' %>!</button>
                    </div>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
