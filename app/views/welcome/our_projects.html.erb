      <div class="site-wrapper-inner site-wrapper-first">

        <div class="cover-container">

          <%= render "shared/header" %>

          <div class="inner cover">
            <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
            <h1 class="cover-heading"><%=t 'our_investments_in_climate_projects' %></h1>
            <p class="lead"><%=t 'our_investments_in_climate_projects_intro_html' %></p>
          </div>
        </div>
      </div>

      <div class="site-wrapper-inner site-wrapper-second">
        <div class="cover-container">
          <div class="inner cover">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <div class="row stats offset-projects">
                <div class="col-md-12">
                    <h1 class="cover-heading"><%=t 'climate_project_we_have_invested_in' %></h1>
                    <div class="table-responsive">
                      <table class="table table-striped our-projects">
                        <tbody>
                        <tr>
                          <th></th>
                          <th><%=t 'project_name' %></th>
                          <th><%=t 'country' %></th>
                          <th><%=t 'map' %></th>
                          <th><%=t 'our_investment_certificate' %></th>
                          <th><%=t 'date_of_our_investment' %></th>
                          <th><%=t 'project_certification' %></th>
                          <th><%= t('tonnes_CO2').upcase_first %></th>
                          <th><%=t 'more_info_on_blog' %></th>
                        </tr>
                        <% @projects.each do |project| %>  
                        <tr>
                          <td><%= image_tag project.image_url, height: "50" %></td>
                          <td><a href ="<%= project.blog_url %>"><%= project.name %></a></td>
                          <td><%= project.country %></td>
                          <td><a href="https://www.google.com/maps/preview/@<%= project.latitude %>,<%= project.longitude %>,8z" target="_blank">Google Maps</a></td>
                          <td><a href="<%= project.certificate_url %>"><%=t 'certificate' %></a></td>
                          <td><%= project.date_bought.to_date %></td>
                          <td><%= project.offset_type %></td>
                          <td><%= project.carbon_offset %></td>
                          <td><a href ="<%= project.blog_url %>"><%=t 'read_more' %></a></td>
                        </tr>
                        </tbody>
                      <% end %>
                    </table>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>

      <div id="second-section" class="site-wrapper-inner site-wrapper-third">
        <div class="cover-container">
          <div class="inner cover">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <h1 class="cover-heading"><%=t 'we_are_100_transparent' %></h1>
            <p class="lead"><%=t 'section_3_text' %></p>
            <p class="lead lead-btn">
              <a href="/step_1_choose_plan#choose-plan" class="btn btn-lg btn-success"><%=t 'i_want_to_contribute' %></a>
            </p>
          </div>
        </div>
      </div>

      <%= render "shared/footer" %>
        
  
