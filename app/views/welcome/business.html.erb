<div class="site-wrapper-first">
  <%= render "shared/header" %>
  <div class="inner">

    <h1 class="cover-heading"><%=t('welcome.business.for_companies') %></h1>
    <p class="lead"><%=t 'welcome.business.for_companies_text_html' %></p>

  </div>
  <span class="glyphicon glyphicon-chevron-down first" aria-hidden="true"></span>
</div>

<div class="site-wrapper-second company-logos">
  <div class="inner">

    <h4 class="cover-heading"><%=t 'welcome.business.customers_we_work_with' %>:</h4>
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag "companies/norrsken.png", width: "300", alt: "norrsken company logo" %>
      </div>
      <div class="col-lg-4">
        <%= image_tag "companies/netlight.png", width: "300", alt: "netlight company logo" %>
      </div>
      <div class="col-lg-4">
        <%= image_tag "companies/mentimeter.png", width: "300", alt: "mentimeter company logo" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag "companies/wdht.png", width: "300", alt: "wedonthavetime company logo" %>
      </div>
      <div class="col-lg-4">
        <%= image_tag "companies/blocket.png", width: "300", alt: "blocket company logo" %>
      </div>
      <div class="col-lg-4">
        <%= image_tag "companies/breakit.png", width: "300", alt: "breakit company logo" %>
      </div>
    </div>

  </div>
</div>

<div class="site-wrapper-third">
  <div class="inner">
    <div class="content-section">
      <span class="glyphicon glyphicon-leaf" aria-hidden="true"></span>
      <h2 class="cover-heading">1. <%=t 'welcome.business.calculate_footprint' %></h2>
      <p class="lead"><%=t 'welcome.business.calculate_footprint_html' %></p>
    </div>
    <div class="content-section">
      <p>
        <%= link_to 'Estimate my business footprint', new_business_climate_report_path, class: 'btn btn-lg btn-success' %>
      </p>
    </div>
    <div class="content-section">
      <p>
        Our calculator works for most service companies and is currently
        limited to companies active in Sweden. If you have any specific needs,
        just get in touch and we'll be more than happy to help.
      </p>
    </div>
  </div>
</div>

<div class="site-wrapper-second">
  <div class="inner">

    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
    <h2 class="cover-heading"><%=t 'welcome.business.other_offsetting' %></h2>
    <p class="lead"><%=t 'welcome.business.other_offsetting_html' %></p>

  </div>
</div>

<%= render "shared/footer" %>
