      <div class="site-wrapper-inner site-wrapper-first">

        <div class="cover-container">

          <%= render "shared/header" %>

          <div class="inner cover">
            <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
            <h1 class="cover-heading"><%=t '100_percent_transparency' %></h1>
            <p class="lead"><%=t '100_percent_transparency_intro' %></p>
          </div>
        </div>
      </div>

      <div class="site-wrapper-inner site-wrapper-second">
        <div class="cover-container">
          <div class="inner cover">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <div class="row stats offset-projects">
                <div class="col-md-12">
                    <h1 class="cover-heading"><%=t '100_percent_transparency_climate_projects' %></h1>
                    <p class="lead"><%=t '100_percent_transparency_climate_projects_intro' %></p>
                    <div class="table-responsive">
                      <table class="table table-striped our-projects">
                        <tbody>
                        <tr>
                          <th></th>
                          <th><%=t 'project_name' %></th>
                          <th><%=t 'our_investment_certificate' %></th>
                          <th><%=t 'project_invoices' %></th>
                          <th><%=t 'date_of_our_investment' %></th>
                          <th><%= t('tonnes_CO2').upcase_first %></th>
                          <th><%=t 'more_info_on_blog' %></th>
                        </tr>
                        <% @projects.each do |project| %>  
                        <tr>
                          <td><%= image_tag project.image_url, height: "50", alt: "" %></td>
                          <td><a href ="<%= project.blog_url %>"><%= project.name %></a></td>
                          <% if project.certificate_url.nil? || project.certificate_url.empty? %>
                            <td>-</td>
                          <% else %>
                            <td><a href="<%= project.certificate_url %>"><%=t 'certificate' %></a></td>
                          <% end %>
                          <% if project.invoice_url.nil? || project.invoice_url.empty? %>
                            <td>-</td>
                          <% else %>
                            <td><a href="<%= project.invoice_url %>"><%=t 'invoice' %></a></td>
                          <% end %>
                          <td><%= project.date_bought.to_date %></td>
                          <td><%= project.carbon_offset %></td>
                          <td><a href ="<%= project.blog_url %>"><%=t 'read_more' %></a></td>
                        </tr>
                        </tbody>
                      <% end %>
                    </table>
                    <p class="lead"><%=t 'for_more_information_about_climate_projects' %> <%= link_to t('our_projects').downcase, '/our_projects' %>.</p>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>

