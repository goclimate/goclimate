<%= render "shared/header" %>

<section class="section-padding">
  <h1 class="heading-xl mb-12"><%= title(t('faq')) %></h1>

  <div class="section-gutter flex flex-col d:flex-row d:flex-wrap">
    <% t('faq_questions').each do |category_key, category| %>
      <div class="d:w-1/3">
        <h2 class="heading my-3"><%= category[:heading] %></h2>
        <ul class="list-bullet space-y-3">
        <% category[:questions].each do |question_key, question| %>
          <li><a href="#<%= "#{category_key}-#{question_key}" %>"class="link"><%= question[:question] %></a></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</section>

<section class="section-padding">
  <div>
    <% t('faq_questions').each do |category_key, category| %>
        <h2 class="heading-lg mt-12 mb-6 d:text-center"><%= category[:heading] %></h2>
        <% category[:questions].each do |question_key, question| %>
          <div id="<%= "#{category_key}-#{question_key}" %>" class="absolute -mt-20"></div>
          <div class="callout my-6 d:max-w-3/4 d:mx-auto">

            <input type="checkbox" id="<%= "#{category_key}-#{question_key}" %>-id" class="toggler">

            <label for="<%= "#{category_key}-#{question_key}" %>-id" class="flex items-center justify-between cursor-pointer space-x-4">
              <h3 class="heading">
                  <%= question[:question] %>
              </h3>
              <span class="fa fa-chevron-down transform toggler-checked:rotate-180 transition-transform duration-200"></span>
            </label>

            <div class="hidden toggler-checked:block">
              <p class="mt-3"><%= raw question[:answer].gsub('<a', '<a class="link" rel="noopener noreferrer"').html_safe %></p>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</section>

<%= render "shared/footer" %>
