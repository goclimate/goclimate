    <div class="t:w-1/2">
      <h3 class="heading mb-6"><%=t 'amount_of_avoided_emissions' %></h3>
      <%= image_tag webpack_asset_path('images/transparency/co2-avoided.png'), class: 'w-full' %>
    </div>
    <div class="t:w-1/2">
      <h3 class="heading mb-6"><%=t 'project_distribution_by_continent' %></h3>
      <%= image_tag webpack_asset_path('images/transparency/project-continent.png'), class: 'w-full'  %>
    </div>
    <div class="t:w-1/2">
