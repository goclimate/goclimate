<% set_meta_tags og: { title: social_quote_for(@user.user_name, @neutral_months) } %>

<%= render "shared/facebook_script" %>
<%= render "shared/twitter_script" %>
<%= javascript_tag do %>
  window.facebookQuote = '<%= handle_social_quote_for(@user.user_name, @user.number_of_neutral_months > 0, @neutral_months) %>';
  window.urlToShare = '<%= user_url(@user) %>'
<% end %>

<%= render "shared/header" %>

<section class="bg-blue-tint-1">
  <div class="relative z-20 max-w-3xl mx-auto px-4 t:px-16 d:px-0 pt-16 t:pt-24 d:pt-32 text-center">
    <h1 class="heading-xl mb-6">
      <% if @user.number_of_neutral_months > 0 %>
        <%= social_quote_for(@user.user_name, @neutral_months) %>
      <% else %>
        <%= t 'share_quote_without_months' %>
      <% end %>
    </h1>

    <div class="space-y-3">
      <% if @sharing %>
        <p><%=t 'climate_change_is_best_faced_together' %></p>
        <div class="flex flex-col m-lg:flex-row m-lg:justify-center space-y-1 m-lg:space-y-0 m-lg:space-x-1">
          <a class="button" id="share-facebook-bottom"><span class="fa fa-facebook"></span> <%=t 'share_on_facebook' %></a>
          <a class="button" href="https://twitter.com/intent/tweet?text=<%= handle_encoded_social_quote_for(@user.user_name, @user.number_of_neutral_months > 0, @neutral_months) %>" data-size="large"><span class="fa fa-twitter"></span> <%=t 'share_on_twitter' %></a>
        </div>
      <% else %>
        <p><%=t 'climate_change_is_the_greatest_challange' %></p>
        <div>
          <a href="/" class="button button-cta"><%=t 'i_want_to_know_more' %></a>
        </div>
      <% end %>
    </div>

  </div>
  <div class="t:-mt-32">
    <%= render "shared/hero_landscape" %>
  </div>
</section>

<section class="bg-green-tint-1">
  <div class="section-padding space-y-6 text-center">
    <h2 class="heading-lg"><%= t 'views.welcome.index.about_us.heading' %></h2>
    <div class="max-w-2xl mx-auto">
      <div class="pb-9/16 relative">
        <% if I18n.locale == :sv %>
          <iframe src='https://player.vimeo.com/video/241825913' align='top' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen class="w-full h-full absolute"></iframe>
        <% else %>
          <iframe src='https://player.vimeo.com/video/246406263' align='top' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen class="w-full h-full absolute"></iframe>
        <% end %>
      </div>
    </div>
    <div class="space-y-3">
      <h3 class="heading"><%= t('views.shared.prefooter.heading') %></h3>
      <p><%= t('views.shared.prefooter.body_text') %> </p>
      <p><%= link_to t('views.shared.prefooter.button'), root_path, class: 'button button-cta' %></p>
    </div>
  </div>
</section>


<%= render "shared/footer", skip_prefooter: true %>

<% content_for :javascript_tags do %>
  <script>
    $(document).ready(function() {
      initializeUsers();
    });
  </script>
<% end %>
