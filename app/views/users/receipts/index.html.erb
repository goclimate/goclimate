<%= render "shared/header" %>

<div class="bg-blue-pastel">
  <section class="section-padding">
    <h1 class="heading-xl mb-6"><%= t 'views.receipts.heading' %></h1>

    <div class="space-y-3">
      <div class="flex flex-row font-bold">
        <div class="w-1/3"><%= t 'views.receipts.date' %></div>
        <div class="w-1/3"><%= t 'views.receipts.amount' %></div>
        <div class="w-1/3"><%= t 'views.receipts.link' %></div>
      </div>
      <% @receipts.each do |receipt| %>
        <div class="flex flex-row">
          <div class="w-1/3"><%= receipt.date %></div>
          <div class="w-1/3"><%= price_string(receipt.total_amount, receipt.currency) %></div>
          <div class="w-1/3"><%= link_to t('views.receipts.view'), user_receipt_path(receipt.card_charge.id), class: 'link' %></div>
        </div>
      <% end %>

    </div>
  </section>
  <%= render "shared/bottom_landscape" %>
</div>

<%= render "shared/footer", skip_prefooter: true %>

